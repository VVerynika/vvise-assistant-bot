# Slack Integration
SLACK_TOKEN=xoxb-your-slack-bot-token-here

# ClickUp Integration
CLICKUP_API_TOKEN=your-clickup-api-token-here
CLICKUP_WORKSPACE_ID=your-workspace-id-here

# Telegram Bot
TELEGRAM_TOKEN=your-telegram-bot-token-here
TELEGRAM_AUTHORIZED_USERS=123456789,987654321

# Google Sheets
GOOGLE_SHEET_ID=your-google-sheet-id-here
SERVICE_ACCOUNT_JSON_PATH=/path/to/service-account.json

# Render (если используется)
RENDER_SECRET_FILE_SERVICE_ACCOUNT_JSON=/etc/secrets/service_account.json

# Database (опционально)
POSTGRES_PASSWORD=your-postgres-password-here

# Дополнительные настройки
SLACK_STATE_FILE=/workspace/.slack_state.json
CLICKUP_STATE_FILE=/workspace/.clickup_state.json

# Системные настройки
LOG_LEVEL=INFO
MONITORING_INTERVAL=30
SLACK_CHECK_INTERVAL=60
CLICKUP_CHECK_INTERVAL=300
TELEGRAM_POLLING_INTERVAL=1

# Настройки анализа
SIMILARITY_THRESHOLD=0.7
FORGOTTEN_DAYS_THRESHOLD=7
CLEANUP_DAYS_THRESHOLD=90